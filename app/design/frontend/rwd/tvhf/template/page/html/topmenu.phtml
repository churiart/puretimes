<?php
/**
 * Top menu for store
 *
 * @see Mage_Page_Block_Html_Topmenu
 */

// getting main_menu block and also shop navigation
$_shopMenuActive = Mage::getModel('cms/block')->load('shop_menu')->getIsActive();
$_menu = $this->getHtml('level-top');
?>
<?php if($_shopMenuActive && 1==2): ?>
    <div class="shop-menu">
    	<?php //echo $_menu ?>
    	<?php //echo $this->getLayout()->createBlock('cms/block')->setBlockId('vh_shop_menu')->toHtml();?>
		<?php $_helper = Mage::helper('catalog/category');?>
        <?php $_categories = $_helper->getStoreCategories(false, true, false);?>
        <?php $_categories->addAttributeToSelect('image');?>
        <?php $_categories->addAttributeToSelect('description');?>
		<?php 
        if (count($_categories) > 0): 
        ?>
            <div class="category-nav">
                <div class="category-nav-inner">
        <?php
            foreach($_categories as $_category):
        ?>
                    <a href="<?php echo $_helper->getCategoryUrl($_category) ?>"><?php echo $_category->getName(); ?></a>
        <?php	 
            endforeach;
		endif;	
        ?>
                </div>
            </div>
    </div>
<?php else: ?>
    <div class="shop-menu">
        <div class="category-menu">
            <div class="category-menu-inner">
                <ul>
                    <?php echo $_menu ?>
                </ul>
            </div>
        </div>
    </div>
<?php endif ?>

